<div class="modal fade" id="jobModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h2 class="modal-title" id="myModalLabel">Adicionar Vaga</h2>
      </div>
      <div class="modal-body">
        <%= form_for(:job, :html => {class: "form-horizontal", role: "form"}, url: jobs_path, action: "POST") do |f| %>
          <div class="form-group">
            <div class="col-sm-8 col-sm-offset-2">
              <div class="inner-addon left-addon">
                <div class="input-group">
                  <span class="input-group-addon" id="basic-addon1">
                    <span class="glyphicon glyphicon-briefcase" aria-hidden="true"></span>
                  </span>
                  <%= f.text_field :title, class: "form-control", placeholder: "Job Title" %>
                </div>
              </div>
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-8 col-sm-offset-2">
              <div class="inner-addon left-addon">
                <div class="input-group">
                  <span class="input-group-addon" id="basic-addon1">
                    <span class="glyphicon glyphicon-calendar" aria-hidden="true"></span>
                  </span>
                  <%= f.date_field :expiration_date, class: "form-control", autocomplete: "off" %>
                </div>
              </div>
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-8 col-sm-offset-2">
              <div class="inner-addon left-addon">
                <div class="input-group">
                  <span class="input-group-addon" id="basic-addon1">
                    <span class="glyphicon glyphicon-map-marker" aria-hidden="true"></span>
                  </span>
                  <%= f.text_field :location, class: "form-control", placeholder: "Location", autocomplete: "off" %>
                </div>
              </div>
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-8 col-sm-offset-2">
              <div class="inner-addon left-addon">
                <%= f.text_area :description, class: "form-control", placeholder: "Job description", rows: 5 %>
              </div>
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-8 col-sm-offset-2">
              <% Skill.all.each do |s| %>
                <%= f.check_box(:skills, { :multiple => true }, s.id, nil) %>
                <label><%= s.name %></label>
              <% end %>
            </div>
          </div>
          <div class="form-group">
            <div class="text-center">
              <%= f.submit("Gravar", class: "btn btn-primary btn-lg") %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
