<div class="container">
  <h1 align="center" class="sub-title">Organizations</h1>
  <div align="center">
    <div class="inner-addon left-addon search-box">
      <i class="glyphicon glyphicon-search"></i>
      <input type="text" id="search" placeholder="Search" autocomplete="off" class="form-control center-block">
    </div>
  </div>
  <div class="flex-between">
    <% @organizations.each do |o| %>
        <div class="card org">
          <!--
          <div class="avatar">
            <% # image_tag t.avatar.url(:thumb), class: "image-responsive" %>
          </div>
          -->
          <div class="content">
            <p class="searchable">
              <strong><%= o.name %></strong> <br>
              Contacto telef√≥nico: <%= o.contact %><br>
              Email: <%= o.email %><br>
              Morada: <%= o.address %><br>
            </p>
            <!--
            <% # link_to "See Profile", organization_path(o.id), class: "btn btn-default" %>
            -->
          </div>
        </div>
      <% end %>
  </div>
</div>
