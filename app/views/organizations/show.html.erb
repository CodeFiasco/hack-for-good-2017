
<div class="innerStyle">
  <div class="col-md-4 col-md-offset-4 spacing-top">
    <div class="thumbnail">
      <% if @organization.avatar.url.nil? %>
        <%= image_tag "profile.png", class: "list-image" %>
      <% else %>
        <%= image_tag @organization.avatar, class: "list-image"%>
      <% end %>
        <div class="caption">
          <h3 class="text-center"><%= @organization.name %></h3>
          <p><strong>Contacto telef√≥nico:</strong> <%= @organization.contact %></p>
          <p><strong>Email:</strong> <%= @organization.email %></p>
          <p><strong>Morada:</strong> <%= @organization.address %></p>
        </div>
    </div>
  </div>
</div>
