
<div class="innerStyle">
    <%= form_for @refugee do |f| %>
    <div class="form-group">
        <div class="col-sm-8 col-sm-offset-2">
            <div class="inner-addon left-addon">
                <div class="input-group">
                      <span class="input-group-addon" id="basic-addon1">
                        <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
                      </span>
                    <%= f.text_field :name, class: "form-control", placeholder: "Enter name", autofocus: true %>
                </div>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-8 col-sm-offset-2">
            <div class="inner-addon left-addon">
                <div class="input-group">
                      <span class="input-group-addon" id="basic-addon1">
                        <span class="glyphicon glyphicon-eye-close" aria-hidden="true"></span>
                      </span>
                    <%= f.password_field :password, class: "form-control", placeholder: "Password", autocomplete: "off" %>
                </div>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="text-center">
            <%= f.submit("Sign Up", class: "btn btn-primary btn-lg") %>
        </div>
    </div>
    <% end %>
</div>